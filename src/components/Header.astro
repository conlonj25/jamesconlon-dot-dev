---
import { Icon } from "astro-icon/components";
import HomeLink from "./HomeLink.astro";
---

<div class="header">
   <HomeLink/>

  <div class="icon-container">
    <a href="mailto:conlonj25@gmail.com">
      <Icon name="simple-icons:gmail" />
    </a>
    <a href="https://github.com/conlonj25">
      <Icon name="simple-icons:github" />
    </a>
    <a href="https://twitter.com/conlonj25">
      <Icon name="simple-icons:x" />
    </a>
    <a href="https://www.linkedin.com/in/conlonj5">
      <Icon name="simple-icons:linkedin" />
    </a>
    <a href="https://www.codewars.com/users/conlonj25">
      <Icon name="simple-icons:codewars" />
    </a>
  </div>
</div>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    color: var(--foreground);
    font-size: 20px;
    line-height: 1.6;
  }

  .icon-container {
    display: flex;
    gap: 1rem;
    max-height: 1em;
  }

  a {
    color: var(--foreground);
    text-decoration: none;
    transition: all .2s ease-in-out;
  }

  a:hover {
    color: var(--primary);
    transform: scale(1.1);
  }

  .underline {
    text-decoration-line: underline;
    text-decoration-thickness: 0.25rem;
    text-decoration-color: var(--primary);
  }
</style>
