---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
import { getCollection } from "astro:content";
import Link from "../components/Link.astro";
const allPosts = await getCollection("posts");
const recentPosts = allPosts.slice(0,4);
---

<BaseLayout title="James Conlon">
  <p>
    Hi, I'm James. I'm a web developer from Ireland, living and working in Barcelona.
  </p>
  <p>
    Take a look around. Here you'll find more information about me, the projects I'm working on and my blog.
  </p>

    {
      recentPosts.map((post) => (
      <Link title={post.data.title} date={post.data.date} spoiler={post.data.spoiler} href={`/${post.slug}/`}/>
      ))
    }
</BaseLayout>