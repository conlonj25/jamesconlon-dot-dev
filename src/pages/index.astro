---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const topPosts = allPosts.slice(0,4);
---

<BaseLayout title="Jim.dev">
  <h1>Jim<span class="text-gradient">.dev</span></h1>
  Hi, I'm James. I'm an Irish web developer based in Barcelona. Check out some of
  my projects!

  <h2>Projects</h2>

  <ul role="list" class="link-card-grid">
    <Card href="" , title="Jim.dev" body="My personal website/blog" />
    <Card
      href="https://github.com/conlonj25/business-model-canvas"
      ,
      title="Business Model Canvas"
      body="Plan your next killer startup with this nifty app"
    />
    <Card
      href="https://github.com/conlonj25/Bookshelf"
      ,
      title="Bookshelf"
      body="Mock-up web application. Online book retailer."
    />
    <Card
      href="https://github.com/conlonj25/Minecraft_Clone"
      ,
      title="Minecraft Clone"
      body="Some might call it ground-breaking"
    />
    <Card
      href="https://github.com/conlonj25/Masters_Project_EE595"
      ,
      title="PYNQ Crowd Counting"
      body="Computer vision project for real-time crowd counting on edge hardware"
    />
    <Card
      href="https://github.com/conlonj25/weather"
      ,
      title="Weather App"
      body="Simple weather app built on top of OpenWeather API"
    />
  </ul>

  <h2>Most Recent Blog Posts</h2>
  <ul role="list" class="link-card-grid">
    {
      topPosts.map((post) => (
      <Card href={post.url ?? '/'}, title={post.frontmatter.title} body={post.frontmatter.description} />
      ))
    }
  </ul>
</BaseLayout>
