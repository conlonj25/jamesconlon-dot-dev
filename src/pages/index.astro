---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<Layout title="Jim.dev">
  <main>
    <Header />
    <h1>Jim<span class="text-gradient">.dev</span></h1>
    Hi, I'm James. I'm an Irish web developer based in Barcelona. Check out some
    of my projects!

    <h2>Projects</h2>
    <ul role="list" class="link-card-grid">
      <Card href="" , title="Jim.dev" body="My personal website/blog" />
      <Card
        href="https://github.com/conlonj25/business-model-canvas"
        ,
        title="Business Model Canvas"
        body="Plan your next killer startup with this nifty app"
      />
      <Card
        href="https://github.com/conlonj25/Bookshelf"
        ,
        title="Bookshelf"
        body="Mock-up web application. Online book retailer."
      />
      <Card
        href="https://github.com/conlonj25/Minecraft_Clone"
        ,
        title="Minecraft Clone"
        body="Some might call it ground-breaking"
      />
      <Card
        href="https://github.com/conlonj25/Masters_Project_EE595"
        ,
        title="PYNQ Crowd Counting"
        body="Computer vision project for real-time crowd counting on edge hardware"
      />
      <Card
        href="https://github.com/conlonj25/weather"
        ,
        title="Weather App"
        body="Simple weather app built on top of OpenWeather API"
      />
    </ul>

    <h2>Blog</h2>

    <Footer />
  </main>

  <style>
    main {
      margin: auto;
      padding: 1rem;
      width: 800px;
      max-width: calc(100% - 2rem);
      color: white;
      font-size: 20px;
      line-height: 1.6;
    }
    .astro-a {
      position: absolute;
      top: -32px;
      left: 50%;
      transform: translatex(-50%);
      width: 220px;
      height: auto;
      z-index: -1;
    }
    h1 {
      font-size: 4rem;
      font-weight: 700;
      line-height: 1;
      text-align: center;
      margin-bottom: 1em;
    }
    .text-gradient {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }
    .instructions {
      margin-bottom: 2rem;
      border: 1px solid rgba(var(--accent-light), 25%);
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
      padding: 1.5rem;
      border-radius: 8px;
    }
    .instructions code {
      font-size: 0.8em;
      font-weight: bold;
      background: rgba(var(--accent-light), 12%);
      color: rgb(var(--accent-light));
      border-radius: 4px;
      padding: 0.3em 0.4em;
    }
    .instructions strong {
      color: rgb(var(--accent-light));
    }
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 2rem;
      padding: 0;
    }
  </style>
</Layout>
